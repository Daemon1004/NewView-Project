<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/base_layout"
            style="@style/baseLayout"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/groupCardViewStyle"
                android:layout_marginBottom="74dp">

                <LinearLayout
                    style="@style/groupLayout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/groupLabelStyle"
                        android:text="@string/Welcome" />

                    <TextView
                        style="@style/groupTextStyle"
                        android:text="@string/LogInText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        style="@style/groupCardViewStyle"
        android:layout_margin="@dimen/groupMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            style="@style/groupLayout"
            android:orientation="vertical">

            <Button
                android:id="@+id/GoogleLoginButton"
                style="@style/groupSingleButtonStyle"
                android:text="@string/GoogleLogIn" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>